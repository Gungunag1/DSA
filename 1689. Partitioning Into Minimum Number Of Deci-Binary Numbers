#TC- O(N)


class Solution {
public:
    int minPartitions(string n) {
        char maxDigit = '0';
    
    for (char c : n) {
        if (c > maxDigit) {
            maxDigit = c;
        }
        
        // Early stop if we find '9'
        if (maxDigit == '9') {
            return 9;
        }
    }
    
    return maxDigit - '0'; 
    }
};
