//Time: O(32) â†’ O(1)

class Solution {
public:
    int reverseBits(int n) {
        unsigned int result = 0;
        unsigned int num = n;  // treat n as unsigned
        
        for (int i = 0; i < 32; i++) {
            result <<= 1;          // shift result left to make space
            result |= (num & 1);   // take last bit of num
            num >>= 1;            // shift num right
        }
        
        return result;
    }
};
